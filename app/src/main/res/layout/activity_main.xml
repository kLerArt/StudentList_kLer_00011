<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/background_green"    tools:context=".MainActivity">    <ScrollView        android:layout_width="match_parent"        android:layout_height="match_parent">        <LinearLayout            android:gravity="center"            android:layout_gravity="center"            android:orientation="vertical"            android:layout_width="wrap_content"            android:layout_height="wrap_content">            <ImageView                android:layout_width="150dp"                android:layout_height="150dp"                android:src="@drawable/ic_action_person"                />            <TextView                android:textColor="#FAF6F6"                android:textSize="20dp"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="تعريف بيانات كل طالب"                />            <androidx.cardview.widget.CardView                android:onClick="NewActivity"                android:textDirection="locale"                app:cardBackgroundColor="@color/colorPrimary"                android:layout_height="50dp"                android:layout_width="200dp"                app:cardCornerRadius="40dp"                >                <LinearLayout                    android:layout_gravity="center"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content">                    <TextView                        android:textStyle="italic"                        android:textSize="20dp"                        android:textColor="#FFD600"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:text="we get it"                        />                </LinearLayout>            </androidx.cardview.widget.CardView>            <androidx.cardview.widget.CardView                android:onClick="mrActivity"                android:textDirection="locale"                app:cardBackgroundColor="@color/colorPrimary"                android:layout_height="50dp"                android:layout_width="200dp"                app:cardCornerRadius="40dp"                >                <LinearLayout                    android:layout_gravity="center"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content">                    <TextView                        android:textColor="#FFD600"                        android:textSize="25dp"                        android:textStyle="italic"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:text="See All"                        />                </LinearLayout>            </androidx.cardview.widget.CardView>            <androidx.cardview.widget.CardView                android:layout_marginTop="20dp"                android:onClick="InsertActivity"                android:textDirection="locale"                app:cardBackgroundColor="@color/colorPrimary"                android:layout_height="50dp"                android:layout_width="200dp"                app:cardCornerRadius="40dp"                android:gravity="center"                >                <LinearLayout                    android:layout_gravity="center"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content">                    <TextView                        android:textColor="#FFD600"                        android:textSize="20dp"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:text="INSERT NEW DATA"                        />                </LinearLayout>            </androidx.cardview.widget.CardView>            <Button                android:onClick="TryInsertNewActivity"                android:text="XXX"                android:layout_width="wrap_content"                android:layout_height="wrap_content" />        </LinearLayout>    </ScrollView></androidx.constraintlayout.widget.ConstraintLayout>