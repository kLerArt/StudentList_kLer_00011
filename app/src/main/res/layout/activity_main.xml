<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/blue_background"    tools:context=".MainActivity">    <LinearLayout    android:orientation="vertical"    android:layout_width="match_parent"    android:gravity="center"    android:layout_height="wrap_content">        <ImageView            android:src="@drawable/private_logo"            android:layout_width="150dp"            android:layout_height="150dp" />        <LinearLayout            android:gravity="center"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical"            >            <Button                android:background="@drawable/green_background"                android:id="@+id/LogInForum"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="LogIN"                app:layout_constraintStart_toStartOf="parent" />            <Button                android:background="@drawable/blue_background"                android:id="@+id/BtnView2Department"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="أضافة بيانات طالب"                app:layout_constraintStart_toStartOf="parent"                tools:layout_editor_absoluteY="91dp" />            <Button                android:background="@drawable/blue_background"                android:id="@+id/OtherBtn"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="أستعراض البيانات" />        </LinearLayout>        <LinearLayout            android:layout_gravity="center"            android:orientation="horizontal"            android:layout_width="wrap_content"            android:layout_height="wrap_content">            <Button                android:id="@+id/UpDataRow"                android:layout_width="128dp"                android:layout_height="wrap_content"                android:background="@color/colorPrimary"                android:text="+-+"                android:textSize="60dp"                android:textStyle="bold" />        </LinearLayout>        <LinearLayout            android:orientation="horizontal"            android:layout_width="match_parent"            android:layout_height="wrap_content"/>    <LinearLayout        android:gravity="center"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <androidx.recyclerview.widget.RecyclerView            android:id="@+id/MyRecyleView"            android:layout_width="380dp"            android:layout_height="237dp"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toStartOf="parent" />    </LinearLayout>    </LinearLayout></ScrollView>