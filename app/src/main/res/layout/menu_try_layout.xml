<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/background_green"    >    <LinearLayout        android:orientation="vertical"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:orientation="vertical"            >        </LinearLayout>        <LinearLayout            android:orientation="vertical"            android:layout_width="match_parent"            android:layout_height="wrap_content">            <Button                android:text="GetInsert"                android:background="#f3f3"                android:id="@+id/OtherBtnEx"                android:layout_width="match_parent"                android:layout_height="match_parent" />\        </LinearLayout>        <LinearLayout            android:layout_gravity="center"            android:orientation="horizontal"            android:layout_width="wrap_content"            android:layout_height="wrap_content">            <Button                android:background="#272727"                android:text="+"                android:id="@+id/InsertActivity"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="60dp"                android:textStyle="bold"/>            <Button                android:background="@color/colorPrimary"                android:text="+-+"                android:id="@+id/UpDataRow"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="60dp"                android:textStyle="bold"/>            <ImageView                android:id="@+id/ImgTry"                android:layout_width="150dp"                android:layout_height="150dp" />            <Button                android:background="#272"                android:text="N"                android:textColor="@color/colorPrimary"                android:id="@+id/newActivity"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="60dp"                android:textStyle="bold"/>        </LinearLayout>        <LinearLayout            android:orientation="horizontal"            android:layout_width="match_parent"            android:layout_height="wrap_content">            <EditText                android:id="@+id/StudentID"                android:hint="Ehter Student ID"                android:layout_width="wrap_content"                android:layout_height="wrap_content" />            <Button                android:id="@+id/QueryID"                android:text="Guery By Id"                android:layout_width="wrap_content"                android:layout_height="wrap_content" />            <ImageView                android:onClick="ButNewData"                android:background="@drawable/ic_action_person"                android:layout_width="40dp"                android:layout_height="40dp" />        </LinearLayout>        <LinearLayout            android:gravity="center"            android:layout_width="match_parent"            android:layout_height="wrap_content">            <androidx.recyclerview.widget.RecyclerView                android:id="@+id/MyRecyleView"                android:layout_width="380dp"                android:layout_height="237dp"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintStart_toStartOf="parent" />        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal"            >            <Button                android:id="@+id/LogInForum"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="LogIN"                app:layout_constraintStart_toStartOf="parent" />            <Button                android:id="@+id/BtnView2Department"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="Data Insert"                app:layout_constraintStart_toStartOf="parent"                tools:layout_editor_absoluteY="91dp" />            <Button                android:background="#f1f1f1"                android:id="@+id/OtherBtn"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="Custom View" />        </LinearLayout>        <Button            android:onClick="ViewViewRadioInsert"            android:layout_width="match_parent"            android:layout_height="match_parent" />    </LinearLayout></ScrollView>