<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:orientation="vertical"    android:layout_height="match_parent"    android:gravity="center"    tools:context=".UseStudentInfoById">    <ImageView        android:id="@+id/MyImga"        android:layout_width="300dp"        android:layout_height="300dp"        android:src="@mipmap/ic_launcher" />    <TextView        android:id="@+id/StuName"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Name"        android:textSize="30dp" />    <TextView        android:id="@+id/StuID"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="ID"        android:textSize="30dp" />    <TextView        android:id="@+id/StuGeoup"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Group"        android:textSize="30dp" />    <TextView        android:id="@+id/StuSemester"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Semester"        android:textSize="30dp" />    <TextView        android:id="@+id/StuDepartment"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Department"        android:textSize="30dp" /></LinearLayout>