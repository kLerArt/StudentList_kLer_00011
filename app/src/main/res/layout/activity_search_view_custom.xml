<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:background="@drawable/blue_background"    tools:context="SearchViewCustom">    <LinearLayout        android:orientation="horizontal"        android:layout_gravity="center"        android:layout_width="wrap_content"        android:layout_height="wrap_content">    <ImageView        android:onClick="SetMain"        android:src="@drawable/private_logo"        android:layout_width="20dp"        android:layout_height="20dp" />    <TextView        android:gravity="center"        android:textStyle="bold"        android:textSize="20dp"        android:text="البحث باستخدام أسم الطالب"        android:layout_width="match_parent"        android:layout_height="wrap_content" /></LinearLayout>    <LinearLayout        android:orientation="horizontal"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <SearchView            android:id="@+id/SearchBtn"            android:layout_width="300dp"            android:background="@drawable/blue_2_background"            android:layout_height="wrap_content" />        <Button            android:onClick="SwitchActive"            android:text="رقم القيد"            android:textSize="10dp"            android:background="@drawable/green_background"            android:layout_width="40dp"            android:layout_height="80dp" />    </LinearLayout>    <androidx.recyclerview.widget.RecyclerView        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        android:id="@+id/MyRecyleView"        android:layout_width="match_parent"        android:layout_height="wrap_content"        /></LinearLayout>