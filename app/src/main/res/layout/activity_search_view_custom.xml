<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:background="@drawable/background_green_x"    tools:context=".kLerTry.SearchViewCustom">    <SearchView        android:textColor="#BDB8A0"        android:textDirection="firstStrongRtl"        android:id="@+id/SearchBtn"        android:layout_width="match_parent"        android:layout_height="wrap_content" />    <androidx.recyclerview.widget.RecyclerView        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        android:id="@+id/MyRecyleView"        android:layout_width="match_parent"        android:layout_height="wrap_content"        /></LinearLayout>