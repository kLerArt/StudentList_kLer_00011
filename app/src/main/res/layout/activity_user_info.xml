<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context=".UseStudentInfo"    android:background="#00B8D4"    android:gravity="center">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="vertical"        android:background="#00B8D4"        android:gravity="center">    <ImageView        android:id="@+id/MyImga"        android:layout_width="300dp"        android:layout_height="300dp"        android:src="@mipmap/ic_launcher" />    <TextView        android:id="@+id/StuName"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Name"        android:textSize="30dp" />    <TextView        android:id="@+id/StuID"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="ID"        android:textSize="30dp" />    <TextView        android:id="@+id/OrginalID"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Orginal ID"        android:textSize="30dp" />        <LinearLayout            android:layout_margin="5dp"            android:padding="5dp"            android:orientation="horizontal"            android:layout_width="wrap_content"            android:layout_height="wrap_content">            <TextView                android:id="@+id/StuGeoup"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="Group"                android:textSize="30dp" />            <Space                android:layout_width="wrap_content"                android:layout_height="wrap_content" />            <TextView                android:id="@+id/StuSemester"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="Semester"                android:textSize="30dp" />        </LinearLayout>        <TextView            android:id="@+id/StuDepartment"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Department"            android:textSize="30dp" />    <LinearLayout        android:gravity="center"        android:orientation="vertical"        android:layout_width="wrap_content"        android:layout_height="wrap_content">    <EditText        android:ems="@android:integer/config_shortAnimTime"        android:minEms="@android:integer/config_longAnimTime"        android:hint="أدخل ملاحظة خاصة"        android:layout_width="200dp"        android:layout_height="wrap_content" />        <Button            android:textSize="20dp"            android:textColor="#fff"            android:textStyle="bold"            android:text="علق"            android:background="@drawable/green_background"            android:layout_width="wrap_content"            android:layout_height="wrap_content" /></LinearLayout>    <LinearLayout        android:padding="2dp"        android:orientation="horizontal"        android:layout_width="wrap_content"        android:layout_height="wrap_content">        <Button            android:background="@drawable/blue_background"            android:textColor="#E7ECE9"            android:textSize="20dp"            android:textStyle="bold"            android:text="زيادة العداد"            android:layout_width="wrap_content"            android:layout_height="wrap_content" />        <TextView            android:textColor="#fff"            android:textSize="20dp"            android:text="عدد مرات الملاحظة: 0"            android:layout_width="wrap_content"            android:layout_height="wrap_content" />        <Button            android:background="@drawable/purbule_background"            android:textColor="#FFAB00"            android:textSize="20dp"            android:textStyle="bold"            android:text="تصفير العداد"            android:layout_width="wrap_content"            android:layout_height="wrap_content" />    </LinearLayout>    <Button        android:textSize="20dp"        android:textStyle="bold"        android:background="@drawable/red_background"        android:textColor="#FFF"        android:id="@+id/DeletThis"        android:text="   مسح العنصر من السجل "        android:layout_width="wrap_content"        android:layout_height="wrap_content" />    <Button        android:id="@+id/Updata"        android:text="تعديل البيانات"        android:textStyle="bold"        android:textSize="25dp"        android:textColor="#fff"        android:background="@drawable/black_background"        android:layout_width="wrap_content"        android:layout_height="wrap_content" />    </LinearLayout></ScrollView>