<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    app:cardElevation="8dp"    android:layout_margin="8dp"    android:layout_width="match_parent"    android:layout_height="wrap_content"    >    <LinearLayout        android:orientation="horizontal"        android:layout_margin="4dp"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <ImageView            android:src="@mipmap/ic_launcher"            android:id="@+id/MyImga"            android:layout_width="70dp"            android:layout_height="70dp" />        <LinearLayout            android:orientation="horizontal"            android:layout_weight="9"            android:layout_width="10dp"            android:layout_height="wrap_content">            <LinearLayout                android:orientation="vertical"                android:layout_width="wrap_content"                android:layout_height="wrap_content">                <TextView                    android:id="@+id/StuName"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="10dp"                    android:layout_weight="2"                    android:gravity="center_vertical|start"                    android:text="kLer D.Art"                    android:textAllCaps="true"                    android:textStyle="bold" />                <TextView                    android:id="@+id/StuID"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="10dp"                    android:layout_weight="3"                    android:gravity="center_vertical|start"                    android:text="102247"                    android:textAllCaps="true"                    android:textStyle="bold" />            </LinearLayout>            <TextView                android:id="@+id/StuDepartment"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="10dp"                android:gravity="center_vertical|start"                android:text="MyDepartment"                android:layout_weight="1"                android:textAllCaps="true"                android:textStyle="bold" />            <TextView                android:id="@+id/StuGeoup"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="10dp"                android:layout_weight="1"                android:gravity="center_vertical|start"                android:text="Group"                android:textAllCaps="true"                android:textStyle="bold" />            <TextView                android:id="@+id/StuSrmester"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="10dp"                android:gravity="center_vertical|start"                android:text="Semester"                android:layout_weight="1"                android:textAllCaps="true"                android:textStyle="bold" />        </LinearLayout>    </LinearLayout></androidx.cardview.widget.CardView>