<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    tools:context="SearchIdViewCustom"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"   >    <TextView        android:gravity="center"        android:textSize="20dp"        android:text="البحث باستخدام رقم القيد"        android:layout_width="match_parent"        android:layout_height="wrap_content" />    <LinearLayout        android:orientation="horizontal"        android:layout_width="match_parent"        android:layout_height="wrap_content">    <SearchView        android:inputType="number"        android:id="@+id/SearchBtn"        android:layout_width="300dp"        android:layout_height="wrap_content" />        <Button            android:onClick="SwitchActive"            android:text="ID"            android:layout_width="wrap_content"            android:layout_height="wrap_content" /></LinearLayout>    <androidx.recyclerview.widget.RecyclerView        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        android:id="@+id/MyRecyleView"        android:layout_width="match_parent"        android:layout_height="wrap_content"        /></LinearLayout>