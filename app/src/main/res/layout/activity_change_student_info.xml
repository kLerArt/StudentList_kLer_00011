<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#00B8D4"    tools:context=".ChangeStudentInfo">    <LinearLayout        android:gravity="center"        android:orientation="vertical"        android:layout_width="match_parent"        android:layout_height="match_parent">        <ImageView            android:src="@drawable/private_logo"            android:layout_width="150dp"            android:layout_height="150dp" />        <TextView            android:textSize="25dp"            android:text="تعديل بيانات طالب من جديد"            android:textColor="#0F0101"            android:textStyle="bold"            android:layout_width="wrap_content"            android:layout_height="wrap_content" />        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content">        <EditText            android:id="@+id/edtName"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:inputType="textPersonName"            android:ems="10"            android:layout_alignParentTop="true"            android:hint="أدخل الاسم"            android:layout_alignParentLeft="true"            android:layout_alignParentStart="true"            android:layout_alignParentRight="true"            android:layout_alignParentEnd="true" />            <Button                android:background="@drawable/blue_background"                android:text="تحديث"               android:id="@+id/ChangeName"                android:layout_width="wrap_content"                android:layout_height="wrap_content" />        </LinearLayout>        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content">        <EditText            android:id="@+id/editID"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentStart="true"            android:layout_alignParentLeft="true"            android:layout_alignParentEnd="true"            android:layout_alignParentRight="true"            android:layout_marginTop="12dp"            android:ems="10"            android:hint="أدخل رقم القيد"            android:inputType="number" />            <Button                android:text="تحديث"                android:id="@+id/ChangeID"                android:background="@drawable/blue_background"                android:layout_width="wrap_content"                android:layout_height="wrap_content" />        </LinearLayout>        <LinearLayout            android:gravity="center"            android:layout_weight="2"            android:orientation="horizontal"            android:layout_width="wrap_content"            android:layout_height="wrap_content">            <Spinner                android:layout_weight="1"                android:paddingTop="10dp"                android:pointerIcon="text"                android:popupBackground="#3AC7DD"                android:id="@+id/editDepartment"                android:entries="@array/Department"                android:layout_width="wrap_content"                android:layout_height="wrap_content"/>            <Spinner                android:layout_weight="1"                android:popupBackground="#3AC7DD"                android:paddingTop="10dp"                android:id="@+id/editSemester"                android:entries="@array/Semesters"                android:layout_width="wrap_content"                android:layout_height="wrap_content"/>        </LinearLayout>        <LinearLayout            android:layout_weight="2"            android:gravity="center"            android:orientation="horizontal"            android:layout_width="wrap_content"            android:layout_height="wrap_content">            <Spinner                android:layout_weight="1"                android:popupBackground="#3AC7DD"                android:paddingTop="10dp"                android:id="@+id/editGroup"                android:entries="@array/Group"                android:layout_width="wrap_content"                android:layout_height="wrap_content"/>        </LinearLayout>        <Spinner            android:id="@+id/StudentYear"            android:layout_width="140dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:entries="@array/Year"            android:hint="Year Of Student"            android:inputType="number"            android:paddingTop="10dp"            android:popupBackground="#3AC7DD" />        <RadioGroup            android:orientation="horizontal"            android:id="@+id/radioSeason"            android:layout_width="wrap_content"            android:layout_height="wrap_content" >            <RadioButton                android:id="@+id/radioFall"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="خريفي"                android:checked="true" />            <RadioButton                android:id="@+id/radioSpring"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="ربيعي" />        </RadioGroup>        <RadioGroup            android:paddingTop="10dp"            android:id="@+id/Seson"            android:orientation="horizontal"            android:layout_width="wrap_content"            android:layout_height="wrap_content"/>        <ImageView            android:paddingTop="10dp"            android:id="@+id/StudentIMG"            android:layout_width="150dp"            android:layout_height="150dp"            android:src="@drawable/add_new_img"            android:layout_below="@+id/edtPrice"            android:layout_alignParentLeft="true"            android:layout_alignParentStart="true"            android:layout_marginTop="18dp" />        <LinearLayout            android:orientation="horizontal"            android:layout_width="wrap_content"            android:layout_height="wrap_content">            <Button                android:id="@+id/AllIn"                android:background="@drawable/green_background"                android:text="تحديث كل البيانات"                android:layout_width="wrap_content"                android:layout_height="wrap_content" />        </LinearLayout>    </LinearLayout></ScrollView>