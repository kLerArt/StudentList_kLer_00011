<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#00B8D4"    tools:context=".ChangeStudentInfo">    <LinearLayout        android:orientation="vertical"        android:gravity="center"        android:layout_width="match_parent"        android:layout_height="match_parent">        <ImageView            android:src="@drawable/ic_action_person"            android:layout_width="300dp"            android:layout_height="300dp" />        <EditText            android:id="@+id/StuName"            android:hint="Enetr A Name"            android:layout_width="300dp"            android:layout_height="50dp" />        <EditText            android:id="@+id/StuID"            android:hint="Enetr ID"            android:inputType="number"            android:layout_width="300dp"            android:layout_height="50dp" />        <Spinner            android:entries="@array/Year"            android:layout_width="wrap_content"            android:layout_height="wrap_content"/>        <Spinner            android:entries="@array/Semesters"            android:layout_width="wrap_content"            android:layout_height="wrap_content"/>        <Spinner            android:entries="@array/Group"            android:layout_width="wrap_content"            android:layout_height="wrap_content"/>        <Spinner            android:entries="@array/Department"            android:layout_width="wrap_content"            android:layout_height="wrap_content"/>        <RadioGroup            android:orientation="horizontal"            android:layout_width="wrap_content"            android:layout_height="wrap_content">            <TextView                android:text="االفصل :"                android:layout_width="wrap_content"                android:layout_height="wrap_content" />            <RadioButton                android:text="ربيعي"                android:layout_width="wrap_content"                android:layout_height="wrap_content" />            <RadioButton                android:text="خريفي"                android:layout_width="wrap_content"                android:layout_height="wrap_content" />        </RadioGroup>        <ImageView            android:src="@drawable/ic_action_person"            android:layout_width="100dp"            android:layout_height="100dp" />        <Button            android:text="تحديث البيانات"            android:layout_width="wrap_content"            android:layout_height="wrap_content" />    </LinearLayout></ScrollView>