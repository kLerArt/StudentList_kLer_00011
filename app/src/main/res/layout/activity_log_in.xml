<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/blue_2_background"    android:orientation="vertical"    tools:context=".Trusha.kLerTry.LogInActivity">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="vertical">        <ImageView            android:layout_width="160dp"            android:layout_height="160dp"            android:layout_gravity="center"            android:layout_margin="60dp"            android:onClick="SetMain"            android:src="@drawable/private_logo"            />        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:gravity="center"            android:text="تسجيل الدخول للبرنامج !!"            android:textColor="@color/cardview_dark_background"            android:textStyle="bold"            />        <EditText            android:drawableLeft="@drawable/me_person"            android:id="@+id/UseName"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:ems="10"            android:gravity="center"            android:hint="أسم المستخدم"            android:inputType="textPersonName" />        <EditText            android:drawableLeft="@drawable/locked"            android:id="@+id/UserPassWord"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:ems="10"            android:gravity="center"            android:hint="أدخل كلمة السر"            android:inputType="textPassword" />        <Button            android:id="@+id/LogInBtn"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_margin="10dp"            android:background="@drawable/green_background"            android:text="تسجيل الدخول"            android:textColor="#ffffff"            android:textStyle="bold" />    </LinearLayout></ScrollView>