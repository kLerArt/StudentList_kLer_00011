<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context=".kLerTry.LogInActivity">    <ImageView        android:layout_gravity="center"        android:layout_width="160dp"        android:layout_height="160dp"        android:layout_margin="60dp"        />    <TextView        android:gravity="center"        android:textStyle="bold"        android:textColor="@color/cardview_dark_background"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="تسجيل الدخول للبرنامج !!"        />    <EditText        android:gravity="center"        android:id="@+id/UseName"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:ems="10"        android:inputType="textPersonName"        android:hint="enter userName or Email" />    <EditText        android:gravity="center"        android:id="@+id/UserPassWord"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:ems="10"        android:hint="Enter ur Password"        android:inputType="textPassword"        />    <Button        android:layout_margin="10dp"        android:textStyle="bold"        android:textColor="#ffffff"        android:background="#02916F"        android:id="@+id/LogInBtn"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="Log In" /></LinearLayout>